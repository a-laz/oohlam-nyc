<div class="container-fluid body-color">
  <div class="row pt-5">
    <div class="col d-flex justify-content-center sticker-mobile">
      <%= image_tag("Oohlam Sticker 1.png", class: "sticker-desktop") %>
    </div>
  </div>
  <div class="row pb-5">
    <div class="col d-flex justify-content-center pt-5 align-self-center text-center">
      <h2 class="home-text"><%= @event.text %></h2>
    </div>
    <% if user_signed_in? %>
      <%= form_with(model: @event, local: true, url: event_create_path, class: "form-horizontal", method: "post") do |f| %>
        <div class="form-group">
          <%= f.label :text, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :text, class: "form-control"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Create Event", class: "btn btn-primary"%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>